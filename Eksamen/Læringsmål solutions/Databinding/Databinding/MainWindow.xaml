<Window x:Class="Databinding.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Databinding"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="213*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="161*"/>
            <ColumnDefinition Width="17"/>
            <ColumnDefinition Width="339*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Name" Grid.Row="1" HorizontalAlignment="Right" Width="32"></TextBlock>
        <TextBlock Text="Age" Grid.Row="3" HorizontalAlignment="Right" Width="21"></TextBlock>

        <TextBox x:Name="tbName" Grid.Row="1" Grid.Column="2" 
                 HorizontalAlignment="Left" MinWidth="100" Width="100"></TextBox>

        <TextBox x:Name="tbAge" Grid.Row="3" Grid.Column="2" 
                 HorizontalAlignment="Left" MinWidth="100" Width="100"></TextBox>

    </Grid>
</Window>
