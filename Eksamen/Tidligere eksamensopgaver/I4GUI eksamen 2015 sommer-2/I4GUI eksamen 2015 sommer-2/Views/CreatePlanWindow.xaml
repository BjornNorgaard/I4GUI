<Window x:Class="I4GUI_eksamen_2015_sommer_2.Views.CreatePlanWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:I4GUI_eksamen_2015_sommer_2.Views"
        mc:Ignorable="d"
        Title="" Height="200" Width="300"
        Style="{StaticResource WindowStyle}"
        SizeToContent="Height">
    <Grid>

        <StackPanel>
            <TextBlock Text="Tidspunkt"></TextBlock>
            <TextBox x:Name="tbxTime"></TextBox>
            <TextBlock Text="Beskrivelse"></TextBlock>
            <TextBox x:Name="tbxDesc" Height="50"></TextBox>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="1" Content="OK" IsDefault="True" Click="Button_OK_Click"></Button>
                <Button Content="Cancel" IsCancel="True"></Button>
            </Grid>

        </StackPanel>

    </Grid>
</Window>
