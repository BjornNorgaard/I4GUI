<Window x:Class="GUI_eksamen_sommer_2015.CreateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI_eksamen_sommer_2015"
        mc:Ignorable="d"
        Title="CreateWindow" Height="209.304" Width="300"
        Background="Beige">
    <Grid Margin="5">
        <StackPanel>
            
            <!--Om tidspunktet-->
            <TextBlock Text="Tidspunkt:" Margin="0,5,0,0"></TextBlock>
            <TextBox Text="f.eks 20.00" Margin="0,5,0,0" Width="100" HorizontalAlignment="Left"></TextBox>
            
            <!--Om beskrivelsen-->
            <TextBlock Text="Beskrivelse" Margin="0,10,0,0"></TextBlock>
            <TextBox Text="f.eks Derpasin og Herpicon" MinHeight="50"></TextBox>
            
            <!--Knapper-->
            <DockPanel VerticalAlignment="Bottom">
                <Button DockPanel.Dock="Right" Content="OK" IsDefault="True" HorizontalAlignment="Right" MinWidth="80"  Margin="10,10,0,10"></Button>
                <Button DockPanel.Dock="Right" Content="Cancel" IsCancel="True" HorizontalAlignment="Right" MinWidth="80" Margin="10"></Button>
            </DockPanel>
            
        </StackPanel>
    </Grid>
</Window>
